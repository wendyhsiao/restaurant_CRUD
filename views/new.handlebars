<div class="container mt-3">
  <a href="/" class="btn btn-outline-primary mb-3"><i class="fas fa-arrow-left pr-2"></i>back</a>

  <form action="/restaurants" method="POST">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳名稱</span>
      </div>
      <input type="text" placeholder="餐廳名稱" name="name" class="form-control" required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳英文名稱</span>
      </div>
      <input type="text" placeholder="餐廳英文名稱" name="name_en" class="form-control" required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳類別</span>
      </div>
      <input type="text" placeholder="餐廳類別" name="category" class="form-control" required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳照片</span>
      </div>
      <input type="text" pattern="https?://.+" placeholder="餐廳照片 *請放置圖片網址" name="image" class="form-control"
        required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">地點</span>
      </div>
      <input type="text" placeholder="地點" name="location" class="form-control" required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">電話</span>
      </div>
      <input type="text" onkeyup="value=value.replace(/[\W]/g,' ') " placeholder="電話 *只能填寫數字及空白" name="phone"
        class="form-control" required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">google地圖連結</span>
      </div>
      <input type="text" pattern="https?://.+" placeholder="請放置google地圖網址" name="google_map" class="form-control"
        required="required">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">評分</span>
      </div>
      {{!-- <input type="number" placeholder="rating 1-5" name="rating" class="form-control" min="1" max="5"
        required="required"> --}}

      <select class="custom-select" id="inputGroupSelect01" name="rating" required="required">
        <option value="">Choose 1-5</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳描述</span>
      </div>
      <input type="text" placeholder="餐廳描述" name="description" class="form-control" required="required">
    </div>

    <button type="submit" class="btn btn-primary mb-3">新增</button>
  </form>
</div>

