<!-- ./views/new.handlebars -->
<div class="container mt-3">
  <a href="/restaurants/{{{restaurant.id}}}" class="btn btn-outline-primary">back</a>

  <form action="/restaurants/{{{restaurant.id}}}" method="POST">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳名稱</span>
      </div>
      <input type="text" placeholder="name" name="name" class="form-control" required="required"
        value="{{{restaurant.name}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳英文名稱</span>
      </div>
      <input type="text" placeholder="name_en" name="name_en" class="form-control" required="required"
        value="{{{restaurant.name_en}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳類別</span>
      </div>
      <input type="text" placeholder="category" name="category" class="form-control" required="required"
        value="{{{restaurant.category}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳照片</span>
      </div>
      <input type="text" placeholder="image" name="image" class="form-control" required="required"
        value="{{{restaurant.image}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">地點</span>
      </div>
      <input type="text" placeholder="location" name="location" class="form-control" required="required"
        value="{{{restaurant.location}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">電話</span>
      </div>
      <input type="text" placeholder="phone" name="phone" class="form-control" required="required"
        value="{{{restaurant.phone}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">google地圖連結</span>
      </div>
      <input type="text" placeholder="google_map" name="google_map" class="form-control" required="required"
        value="{{{restaurant.google_map}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">評分</span>
      </div>
      <input type="number" placeholder="rating 1-5" name="rating" class="form-control" min="1" max="5"
        required="required" value="{{{restaurant.rating}}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">餐廳描述</span>
      </div>
      <input type="text" placeholder="description" name="description" class="form-control" required="required"
        value="{{{restaurant.description}}}">
    </div>

    <button type="submit" class="mb-3">修改</button>
  </form>
</div>